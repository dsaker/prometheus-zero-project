---
# vars file for alertmanager
alertmanager_version: 0.27.0
smtp_email: <smtp_email>
smtp_password: <smtp_password>
alert_receiver_email: <alert_receiver_email>
alert_text_email: <receiver_number>@<SMS_or_MMS_format> # construct from Provider list below
alertmanager_user: alertmanager
alertmanager_dest_dir: /etc/alertmanager
alertmanager_data_dir: /var/lib/alertmanager
service_dest_dir: /lib/systemd/system/
alertmanager_download_dir: /tmp/alertmanager-{{ alertmanager_version }}.linux-armv7
alertmanager_download_url: https://github.com/prometheus/alertmanager/releases/download/v{{ alertmanager_version }}/alertmanager-{{ alertmanager_version }}.linux-armv7.tar.gz

